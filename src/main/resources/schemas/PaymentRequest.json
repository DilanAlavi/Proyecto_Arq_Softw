{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "PaymentRequest",
    "description": "Solicitud de pago con tarjeta de cr√©dito",
    "type": "object",
    "properties": {
        "card_number": {
            "type": "string",
            "pattern": "^[0-9]{16}$"
        },
        "cvv": {
            "type": "string",
            "pattern": "^[0-9]{3}$"
        },
        "expiration_date": {
            "type": "string",
            "pattern": "^(0[1-9]|1[0-2])\\/?([0-9]{4}|[0-9]{2})$"
        }
    },
    "required": ["card_number", "cvv", "expiration_date"]
}
